            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1" title="Booked Revenue">Booked Revenue</div>
            <h3 class="my-2 py-1">$253k</h3>
            <p class="mb-0 text-muted">
              <span class="text-success mr-2"><i class="fas fa-arrow-circle-up"></i> 11.7%</span>
            </p>
          </div>
          <div class="col-6">
            <div class="text-right">
              <div id="booked-revenue-chart"></div>
            </div>
          </div>
        </div> <!-- end row-->
      </div> <!-- end card-body -->
    </div> <!-- end card -->
  </div> <!-- end col -->
</div>
<!-- end row -->

