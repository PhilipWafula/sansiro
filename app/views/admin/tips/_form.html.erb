<%= form_for [:admin, @tip], action: :post  do |tip_form| %>
  <div class="form-group mb-3">
    <%= tip_form.label :tip_package, 'Select a package' %>
    <%= tip_form.select :tip_package, %w(Regular Premium Jackpot), {}, class: 'form-control', required: true %>
  </div>

  <div class="form-group mb-3">
    <%= tip_form.label :tip_date, 'Tip date' %>
    <div class="input-group">
      <%= tip_form.text_field :tip_date, class: 'form-control custom-date-picker', required: true %>
      <div class="input-group-append">
        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
      </div>
    </div>
  </div>

  <div class="form-group mb-3">
    <%= tip_form.label :tip_expiry, 'Enter expiry time' %>
    <div class="input-group">
      <%= tip_form.text_field :tip_expiry, class: 'form-control custom-time-picker', required: true %>
      <div class="input-group-append">
        <span class="input-group-text"><i class="fas fa-clock"></i></span>
      </div>
    </div>
  </div>


  <div class="form-group mb-3">
    <%= tip_form.label 'Message' %>
    <%= tip_form.text_area :tip_content, class: 'form-control', rows: '5', required: true %>
  </div>
  <div class="actions">
    <%= tip_form.submit  class: 'btn btn-primary'  %>
  </div>
<% end %>