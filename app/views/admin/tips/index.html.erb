
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Tips</h1>
</div>
<!-- End of Page Heading -->

<div class="row">
  <!-- Message Stats -->
  <div class="col-xl-6 col-lg-5">
    <div class="card shadow mb-4">
      <!-- Card Header -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Tip Messages</h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <div class="chart-area">
          <canvas id="myAreaChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!--Message Stats-->
  <div class="col-xl-6 col-lg-5">
    <div class="card shadow mb-4">
      <!-- Cm-0 font-weight-bold text-primaryard Header -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Tip Stats</h6>
      </div><!-- Card Body -->
      <div class="card-body">
        <div class="row">
          <!-- Earnings (Monthly) Card Example -->
          <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                      Regular Messages
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                      - <%= @regular_count %>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-comment-alt fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                      Premium Messages
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                      - <%= @premium_count %>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-comment fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                      Jackpot Messages
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                      - <%= @jackpot_count %>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-trophy fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                      Total Revenue
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                      KSH <%= @total_revenue %>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-trophy fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- container-fluid -->
</div>

<div class="row">
  <div class="col-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Tips Data Table</h6>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table id="tipsTable" class="table table-striped table-bordered" data-source="<%= admin_tips_path(format: :json) %>">
            <thead>
              <tr>
                <th>ID</th>
                <th>Message</th>
                <th>Package</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" onclick="scrollToTop()">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        <%= link_to "Logout", destroy_admin_session_path, method: :delete, class: 'btn btn-primary'  %>
      </div>
    </div>
  </div>
</div>

