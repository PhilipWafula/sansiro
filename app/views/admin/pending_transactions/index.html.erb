<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Pending transactions</h1>
  <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
    <i class="fas fa-download fa-sm text-white-50"></i> Generate Report
  </a>
</div>

<div class="row">
  <div class="col-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Tips Data Table</h6>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table id="pendingTransactionsTable" class="table table-striped table-bordered" data-source="<%= admin_pending_transactions_path(format: :json) %>">
            <thead>
            <tr>
              <th>SN:</th>
              <th>First name</th>
              <th>Last name</th>
              <th>Amount</th>
              <th>Package</th>
              <th>Recipient Number</th>
              <th>Timestamp</th>
              <th>Status</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>
