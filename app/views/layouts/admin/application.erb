<!DOCTYPE html>
<html lang="en">
  <head>
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'admin' %>


    <title><%= content_for?(:title) ? yield(:title) : 'Bet App' %></title>

  </head>

  <body>
  <!-- Start Page wrapper -->
  <div class="wrapper">

    <!-- Start Sidebar -->
    <% if admin_signed_in? %>
      <%= render partial: 'admin/navs/sidenav' %>
    <% end %>
    <!-- End Sidebar -->

    <!-- ============================================================== -->
    <!-- Start Page Content here -->
    <!-- ============================================================== -->
    <div class="content-page">

      <!-- Start Container -->
      <div class="content">

        <!-- Start Top bar -->
        <% if admin_signed_in? %>
          <%= render partial: 'admin/navs/topbar' %>
        <% end %>
        <!-- Start Top bar -->

        <!-- Start Container -->
        <div class="container-fluid">

          <!-- Start Flash Messages-->
          <%= render partial: 'layouts/flash_messages' %>
          <!-- End Flash Messages -->

          <!-- Yield Page Content -->
          <%= yield %>
          <!-- End Yield Page Content-->

        </div>
        <!-- End Container-->

      </div>
      <!-- End Container-->

      <!-- Start footer -->
      <footer class="footer">
        <%= render partial: 'layouts/footer' %>
      </footer>
      <!-- End footer-->

    </div>
    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->

  </div>
  <!-- End Page wrapper-->
  <%= javascript_include_tag 'admin' %>
  </body>
</html>
